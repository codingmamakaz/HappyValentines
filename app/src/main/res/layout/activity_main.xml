<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.happyvalentines.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/watercolor"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/happy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="20dp"
        android:text="Happy"
        android:textSize="36sp"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"/>

    <TextView
        android:id="@+id/valentines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/happy"
        android:paddingBottom="20dp"
        android:paddingRight="20dp"
        android:text="Valentine's"
        android:textSize="36sp"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"/>

    <TextView
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/valentines"
        android:paddingRight="20dp"
        android:text="Day"
        android:textSize="36sp"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"/>

    <TextView
        android:id="@+id/glad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/day"
        android:paddingRight="20dp"
        android:paddingTop="60dp"
        android:text="I'm glad it's you."
        android:textColor="@android:color/darker_gray"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/love"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/glad"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:text="I love you &#9825;"
        android:textColor="@android:color/darker_gray"
        android:textSize="30sp"
        android:textStyle="bold" />

</RelativeLayout>
